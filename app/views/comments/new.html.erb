article : <%= @article.title %>
<%= form_for @comment, :url =>{:action => :create, :id => @article.id} do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= @comment.errors[:username].first unless @comment.errors[:username].blank? %>
<br/>
<%= f.label :content %>
<%= f.text_area :content, cols: 20, rows: 10 %>
<%= @comment.errors[:content].first unless @comment.errors[:content].blank?
%>
<br/>
<%= f.label :status %>
<%= f.radio_button :status, 'active' %>
<%= f.label :article_status, "active" %>
<%= f.radio_button :status, "off", :checked =>true %>
<%= f.label :article_status, "off" %>
<br/>
<%= f.submit :submit %>
<% end %>
