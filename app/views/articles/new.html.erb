<%= form_for @article do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= @article.errors[:username].first unless @article.errors[:username].blank? %>
<br/>
<%= f.label :title %>
<%= f.text_field :title %>
<%= @article.errors[:title].first unless @article.errors[:title].blank? %>
<br/>
<%= f.label :content %>
<%= f.text_area :content, cols: 20, rows: 10 %>
<%= @article.errors[:content].first unless @article.errors[:content].blank?
%>
<br/>
<%= f.label :status %>
<%= f.radio_button :status, 'active' %>
<%= f.label :article_status, "active" %>
<%= f.radio_button :status, "off", :checked =>true %>
<%= f.label :article_status, "off" %>
<br/>
<%= f.submit :submit %>
<% end %>