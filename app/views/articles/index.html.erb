<h1>Articles</h1>
<div id='article'>
<% @article.each do |article| %>
    <h3><%= article.title %></h3>
   <h4> oleh : <%= article.username %></h4>
    <p>
<%= article.content.truncate(20) %>
     <%= link_to 'read more', article_path(article.id) %>
    </p>
    status : <%= article.status %>
    <hr/>
     <span><%= link_to 'edit', edit_article_path(article.id) %></span>
     <span><%= link_to 'delete', article_path(article.id), method: "DELETE",
data: {confirm: 'Delete this data ? '} %></span>
<span><%= link_to 'comment', :controller => 'comments', :action=>'new', :id=>article.id %></span>
    </p>
    <hr/>
  <% end %>
  </div>
  <%= paginate @article %>